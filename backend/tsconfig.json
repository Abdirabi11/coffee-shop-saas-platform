{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "NodeNext",
      "rootDir": "./src",
      "outDir": "./dist",
  
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
  
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src", "../config", "src/cache"],
    "exclude": ["node_modules"]
  }
  