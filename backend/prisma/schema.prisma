generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  MANAGER
  STAFF
  CUSTOMER
}

enum StoreRole {
  ADMIN
  MANAGER 
  STAFF
}
 
enum TenantStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

enum SubscriptionStatus {
  TRIAL
  ACTIVE
  PAST_DUE
  CANCELED
  EXPIRED
  PAUSED
}

enum OrderStatus {
  PENDING
  PAID 
  PREPARING
  READY 
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  SUCCESS 
  FAILED  
  PENDING
}

enum PaymentSnapshotStatus {
  PENDING
  PAID
  REFUNDED
  FAILED
}

enum RefundStatus {
  REQUESTED
  PROCESSING
  REFUNDED
  FAILED
}

enum WalletTransactionType {
  TOP_UP 
  PAYMENT 
  REFUND
}

enum FraudSeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum SubscriptionEvent {
  CREATED
  MIGRATED
  CANCELED
  REACTIVATED
}

enum BillingInterval {
  MONTHLY
  YEARLY
}

enum InvoiceStatus {
  PENDING
  DRAFT
  OPEN
  PAID
  VOID
  FAILED
}

enum MenuEventType {
  MENU_VIEW
  CATEGORY_VIEW
  PRODUCT_VIEW
  ADD_TO_CART
}

enum MenuEntityType {
  CATEGORY
  PRODUCT
}

enum MenuSnapshotReason {
  AUTO
  PRODUCT_CHANGE
  CATEGORY_CHANGE
  AVAILABILITY_CHANGE
  STORE_OPEN
  ADMIN_PREVIEW
}

enum EmailStatus {
  PENDING
  PROCESSING
  SENT
  FAILED
  DEAD
}

enum AlertLevel {
  INFO
  WARNING
  ERROR
  CRITICAL
}

enum WebhookStatus {
  PENDING
  SENT
  FAILED
}

model User {
  uuid             String      @id @default(uuid())
  phoneNumber      String      @unique
  email            String?     @unique
  name             String?
  password         String?

  role             Role        @default(CUSTOMER)

  tenantUuid       String?
  tenant           Tenant?     @relation("TenantUsers", fields: [tenantUuid], references: [uuid])

  ownedTenant      Tenant?     @relation("TenantOwner")

  isVerified       Boolean     @default(false)
  isBanned         Boolean     @default(false)

  bannedAt         DateTime?
  banReason        String?

  otpCode          String?
  otpExpiresAt     DateTime?
  otpAttempts      Int          @default(0)

  wallet           Wallet?
  orders           Order[]
  RefreshToken     RefreshToken[]

  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  Session          Session[]
  AuditLog         AuditLog[]
  Admin2FA         Admin2FA[]
  FraudEvent       FraudEvent[]
  UserStore        UserStore[]

  @@index([phoneNumber])
  UserFavorite UserFavorite[]
}   

model Tenant {
  uuid             String        @id @default(uuid())
  name             String
  slug             String        @unique
  email            String
  phone            String?

  status           TenantStatus  @default(ACTIVE)

  ownerUuid        String        @unique
  owner            User          @relation("TenantOwner", fields: [ownerUuid], references: [uuid])

  users            User[]        @relation("TenantUsers")
  stores           Store[]
  subscription     Subscription?

  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  @@index([createdAt])
  @@index([status])
  Invoice Invoice[]
  TenantAddOn TenantAddOn[]
  BillingSnapshot BillingSnapshot[]
  EnterpriseContract EnterpriseContract[]
}

model TenantAddOn {
  uuid              String        @id @default(uuid())
  tenantUuid        String
  addOnUuid         String
  quantity          Int

  tenant            Tenant        @relation(fields: [tenantUuid], references: [uuid])
  addOn             AddOn         @relation(fields: [addOnUuid], references: [uuid])
}

model TenantQuota {
  id                Int           @id @default(autoincrement())
  tenantUuid        String        @unique
  maxRequests       Int      
  windowSeconds     Int      
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
}

model Permission {
  id                Int           @id @default(autoincrement())
  key               String        @unique

  RolePermission    RolePermission[]
}

model RolePermission {
  id                Int            @id @default(autoincrement())
  role              String
  permissionId      Int

  permission        Permission     @relation(fields: [permissionId], references: [id])
}

model Store {
  uuid              String        @id @default(uuid())
  tenantUuid        String
  name              String  
  city              String
  active            Boolean       @default(true)

  staff             UserStore[]
  orders            Order[]
  products          Product[]
  auditLogs         AuditLog[]
  tenant            Tenant        @relation(fields: [tenantUuid], references: [uuid])
  FraudEvent        FraudEvent[]
  Session           Session[]

  createdAt         DateTime      @default(now())
  @@index([createdAt])
  Category Category[]
  StoreOpeningHour StoreOpeningHour[]
  MenuSnapshot MenuSnapshot[]
}

model StoreOpeningHour {
  uuid              String   @id @default(uuid())
  storeUuid         String

  dayOfWeek         Int      // 0 = Sunday ... 6 = Saturday
  openTime          String   // "08:00"
  closeTime         String   // "22:00"
  isClosed          Boolean  @default(false)

  store             Store    @relation(fields: [storeUuid], references: [uuid])

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([storeUuid, dayOfWeek])
  @@index([storeUuid, dayOfWeek])
}

model UserStore {
  userUuid         String
  storeUuid        String

  role             StoreRole         
  user             User             @relation(fields: [userUuid], references: [uuid])
  store            Store            @relation(fields: [storeUuid], references: [uuid])

  @@id([userUuid, storeUuid])
}

model LoginAttempt {
  uuid              String       @id @default(uuid())
  phoneNumber       String
  otpCode           String
  expiresAt         DateTime
  attempts          Int           @default(0)
  used              Boolean       @default(false)

  createdAt         DateTime      @default(now())
}

model FraudEvent {
  uuid              String        @id @default(uuid())
  userUuid          String?
  storeUuid         String

  ipAddress         String
  reason            String
  severity          FraudSeverity
 
  user              User?         @relation(fields: [userUuid], references: [uuid])
  store             Store         @relation(fields: [storeUuid], references: [uuid])

  createdAt         DateTime      @default(now())
}

model RefreshToken {
  uuid              String        @id @default(uuid())
  token             String        @unique
  userUuid          String
  revoked           Boolean       @default(false)
  createdAt         DateTime      @default(now())

  user              User          @relation(fields: [userUuid], references: [uuid])

  Session           Session[]
}

model Session {
  uuid              String        @id @default(uuid())
  userUuid          String
  refreshTokenUuid  String        @unique
  storeUuid         String

  deviceId          String
  deviceType        String        @default("UNKNOWN")
  deviceFingerprint String
  ipAddress         String
  userAgent         String

  user              User          @relation(fields: [userUuid], references: [uuid])
  store             Store         @relation(fields: [storeUuid], references: [uuid])
  refreshToken      RefreshToken  @relation(fields: [refreshTokenUuid], references: [uuid])

  lastUsedAt        DateTime      @default(now())
  revoked           Boolean       @default(false)
  createdAt         DateTime      @default(now())
}

model Admin2FA {
  uuid              String        @id @default(uuid())
  userUuid          String        @unique
  secret            String
  enabled           Boolean       @default(false)

  user              User          @relation(fields: [userUuid], references: [uuid])
}

model AdminAlert {
  uuid        String   @id @default(uuid())
  storeUuid   String?
  level       AlertLevel
  title       String
  message     String?
  context     Json?
  resolved    Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model AuditLog {
  uuid              String        @id @default(uuid())
  storeUuid         String
  actorUuid         String
  
  action            String
  targetType        String
  targetUuid        String?
  ipAddress         String
  userAgent         String
  createdAt         DateTime      @default(now())

  store             Store         @relation(fields: [storeUuid], references: [uuid])
  actor             User          @relation(fields: [actorUuid], references: [uuid])

  @@index([actorUuid])
  @@index([action])
}

model Subscription {
  uuid               String         @id @default(uuid())
  tenantUuid         String         @unique
  tenant             Tenant         @relation(fields: [tenantUuid], references: [uuid])
  planVersionUuid    String

  status             SubscriptionStatus
  price              Int             // cents
  currency           String          @default("USD")

  planUuid           String
  plan               Plan            @relation(fields: [planUuid], references: [uuid])
  planVersion        PlanVersion     @relation(fields: [planVersionUuid], references: [uuid])

  stripeCustomerId   String?
  stripeSubId        String?

  startDate          DateTime
  endDate            DateTime?

  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelAtPeriodEnd  Boolean          @default(false)

  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  histories          SubscriptionHistory[]

  @@index([status])
  @@index([startDate])
  @@index([endDate])
  Invoice Invoice[]
  BillingSnapshot BillingSnapshot[]
}

model SubscriptionHistory {
  uuid                String           @id @default(uuid())
  subscriptionUuid    String
  event               SubscriptionEvent
  oldPlanVersionUuid  String?
  newPlanVersionUuid  String?
  occurredAt          DateTime         @default(now())

  subscription        Subscription     @relation(fields: [subscriptionUuid], references: [uuid])
}

model SubscriptionRetention {
  id              Int      @id @default(autoincrement())
  tenantUuid      String
  cohortMonth     DateTime
  activeCount     Int
  totalCount      Int
  retentionRate   Float
  createdAt       DateTime @default(now())

  @@index([tenantUuid, cohortMonth])
}

model BillingSnapshot {
  uuid                String     @id @default(uuid())

  tenantUuid          String
  subscriptionUuid    String
  planVersionUuid     String

  planName            String
  billingInterval     BillingInterval
  billingMonth        DateTime

  baseAmount          Int
  addonsSnapshot      Json?
  totalAmount         Int
  currency            String        @default("USD")

  periodStart         DateTime
  periodEnd           DateTime

  tenant              Tenant
  subscription        Subscription
  planVersion         PlanVersion

  invoices            Invoice[]

  createdAt           DateTime      @default(now())

  @@unique([tenantUuid, billingMonth])
}

model Invoice {
  uuid                 String       @id @default(uuid())

  tenantUuid           String
  subscriptionUuid     String
  billingSnapshotUuid  String

  invoiceNumber        String        @unique

  subtotal             Int
  tax                  Int
  total                Int
  currency             String         @default("USD")

  status               InvoiceStatus
  dueAt                DateTime?
  paidAt               DateTime?

  pdfUrl               String?
  provider             String?
  providerRef          String?

  locked               Boolean         @default(false)

  tenant               Tenant          @relation(fields: [tenantUuid], references: [uuid])
  subscription         Subscription    @relation(fields: [subscriptionUuid], references: [uuid])

  billingSnapshot      BillingSnapshot @relation(fields: [billingSnapshotUuid], references: [uuid])

  issuedAt             DateTime        @default(now())
  createdAt            DateTime        @default(now())

  @@index([tenantUuid])
  @@index([subscriptionUuid])
  @@index([billingSnapshotUuid])
}

model Plan {
  uuid               String            @id @default(uuid())
  name               String
  currency           String
  isActive           Boolean           @default(true)

  maxStaff           Int
  maxBranches        Int
  maxOrdersMonth     Int?

  Subscription       Subscription[]
  interval           BillingInterval

  PlanPricingVariant PlanPricingVariant[]
  PlanVersion        PlanVersion[]

  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
}

model PlanPricingVariant {
  uuid              String           @id @default(uuid())
  planUuid          String
  priceMonthly      Int
  label             String // "A", "B", "BlackFriday"
  isActive          Boolean          @default(true)

  plan              Plan             @relation(fields: [planUuid], references: [uuid])
}

model PlanVersion {
  uuid              String           @id @default(uuid())
  planUuid          String
  version           Int
  priceMonthly      Int
  features          Json
  createdAt         DateTime         @default(now())
  isActive          Boolean          @default(true)

  plan              Plan             @relation(fields: [planUuid], references: [uuid])

  @@unique([planUuid, version])
  Subscription Subscription[]
  BillingSnapshot BillingSnapshot[]
}

model Product {
  uuid              String          @id @default(uuid())
  storeUuid         String 

  name              String
  description       String?
  basePrice         Int
  imageUrl          String

  isActive          Boolean         @default(true)
  isDeleted         Boolean         @default(true)

  categoryUuid      String?
  category          Category?       @relation(fields: [categoryUuid], references: [uuid])

  optionGroups      ProductOptionGroup[]
  orderItems        OrderItem[]
      
  store             Store           @relation(fields: [storeUuid], references: [uuid])

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@index([storeUuid])
  ProductAvailability ProductAvailability[]
  UserFavorite UserFavorite[]
}

model ProductOptionGroup {
  uuid              String          @id @default(uuid())
  productUuid       String

  name              String   // Size, Milk, Sugar
  required          Boolean         @default(false)
  multiSelect       Boolean         @default(false)
  min               Int?
  max               Int?

  options           ProductOption[]
  product           Product         @relation(fields: [productUuid], references: [uuid])

  @@index([productUuid])
}

model ProductOption {
  uuid              String             @id @default(uuid())
  optionGroupUuid   String

  name              String   
  extraCost         Int     
  isDefault         Boolean            @default(false)

  optionGroup       ProductOptionGroup @relation(fields: [optionGroupUuid], references: [uuid])
}

model ProductAvailability {
  uuid              String             @id @default(uuid())
  productUuid       String

  dayOfWeek         Int      
  startTime         String   
  endTime           String   

  isActive          Boolean             @default(true)

  product           Product             @relation(fields: [productUuid], references: [uuid])

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  @@index([productUuid, dayOfWeek])
}

model ProductSales {
  productUuid String
  date        DateTime
  quantity    Int
  @@id([productUuid, date])
}

model InventoryItem {
  uuid              String      @id @default(uuid())
  storeUuid         String
  productUuid       String

  stock             Int

  updatedAt         DateTime    @updatedAt

  @@unique([storeUuid, productUuid])
}

model StoreDailyMetrics {
  uuid                 String       @id @default(uuid())
  storeUuid      String
  date           DateTime

  totalRevenue   Int
  ordersCount    Int
  failedPayments Int
  avgPrepTimeMin Float

  createdAt      DateTime @default(now())

  @@unique([storeUuid, date])
  @@index([date])
}

model OrderMetricsDaily {
  date        DateTime @id
  storeUuid  String
  revenue    Int
  orders     Int
}

model ProductDailyMetrics {
  uuid                 String       @id @default(uuid())
  productUuid  String
  storeUuid    String
  date         DateTime

  quantitySold Int
  revenue      Int

  createdAt    DateTime @default(now())

  @@unique([productUuid, storeUuid, date])
  @@index([date])
}

model Category {
  uuid                 String       @id @default(uuid())
  storeUuid            String
  name                 String
  order                Int          @default(0)
  isActive             Boolean      @default(true)

  products             Product[]
  store                Store        @relation(fields: [storeUuid], references: [uuid])

  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt

  CategoryAvailability CategoryAvailability[]
  visibilitySchedules CategoryVisibilitySchedule[]

  @@unique([storeUuid, name])
  @@index([storeUuid, order]) 
}

model CategoryVisibilitySchedule {
  uuid                 String       @id @default(uuid())
  categoryUuid         String

  dayOfWeek            Int?    // 0 = Sunday, 6 = Saturday (null = everyday)
  startTime            String  // "06:00"
  endTime              String  // "11:00"

  category             Category @relation(fields: [categoryUuid], references: [uuid])

  createdAt            DateTime @default(now())
}

model CategoryAvailability {
  uuid                 String        @id @default(uuid())
  categoryUuid         String

  dayOfWeek            Int
  startTime            String
  endTime              String
  isActive             Boolean        @default(true)

  category             Category       @relation(fields: [categoryUuid], references: [uuid])

  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt

  @@index([categoryUuid, dayOfWeek])
}

model MenuAnalyticEvents {
  uuid              String        @id @default(uuid())

  storeUuid         String
  tenantUuid        String?

  eventType         MenuEventType
  entityType        MenuEntityType?
  entityUuid        String?

  sessionId         String?
  deviceType        String?   // ios | android | web
  country           String?
  city              String?

  occurredAt        DateTime       @default(now())
  createdAt         DateTime       @default(now())

  @@index([storeUuid, occurredAt])
  @@index([eventType, occurredAt])
}

model MenuSnapshot {
  uuid                String   @id @default(uuid())
  storeUuid           String

  menuHash            String   
  menuJson            Json     

  totalCategories     Int
  totalProducts       Int
  totalOptions        Int

  reason              String   
  triggeredBy         String? // userUuid / system

  version             Int      // menu version at snapshot
  generatedAt         DateTime @default(now())

  store               Store    @relation(fields: [storeUuid], references: [uuid])

  createdAt           DateTime @default(now())

  @@index([storeUuid, createdAt])
}

model MenuDiff {
  id            Int      @id @default(autoincrement())
  storeUuid     String
  fromSnapshot  String
  toSnapshot    String

  addedProducts   Json
  removedProducts Json
  priceChanges    Json

  createdAt     DateTime @default(now())
}

model UserFavorite {
  uuid               String        @id @default(uuid())
  userUuid           String
  productUuid        String
  storeUuid          String

  createdAt          DateTime      @default(now())

  user               User          @relation(fields: [userUuid], references: [uuid])
  product            Product       @relation(fields: [productUuid], references: [uuid])

  @@unique([userUuid, productUuid])
  @@index([storeUuid])
}

model Order {
  uuid              String          @id @default(uuid())
  userUuid          String
  status            OrderStatus     @default(PENDING)
  totalAmount       Int          // cents

  user              User            @relation(fields: [userUuid], references: [uuid])
  items             OrderItem[]
  payment           Payment?

  menuSnapshot      Json
  menuVersion       String

  storeUuid         String
  store             Store           @relation(fields: [storeUuid], references: [uuid])

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@index([userUuid])
  @@index([createdAt])  
  PaymentSnapshot PaymentSnapshot[]
}

model OrderItem {
  uuid              String          @id @default(uuid())
  orderUuid         String
  productUuid       String
  quantity          Int
  price             Int     

  order             Order           @relation(fields: [orderUuid], references: [uuid])
  product           Product         @relation(fields: [productUuid], references: [uuid])
}

model Payment {
  uuid              String          @id @default(uuid())
  orderUuid         String          @unique
  storeUuid         String

  amount            Int
  currency          String
  status            PaymentStatus
  provider          String         // STRIPE / WALLET
  providerRef       String?
  snapshot          Json     

  order             Order           @relation(fields: [orderUuid], references: [uuid])

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

model PaymentSnapshot {
  uuid              String           @id @default(uuid())

  orderUuid         String           @unique
  storeUuid         String

  currency          String
  subtotal          Int
  tax               Int
  discount          Int      @default(0)
  total             Int

  pricingRules      Json     // taxes, discounts, promos
  itemsSnapshot     Json     // frozen items + prices

  provider          String   // stripe / wallet / evc
  status            PaymentSnapshotStatus @default(PENDING)

  createdAt         DateTime @default(now())

  order             Order    @relation(fields: [orderUuid], references: [uuid])
}

model Refund {
  uuid              String        @id @default(uuid())

  orderUuid         String
  paymentUuid       String
  storeUuid         String

  amount            Int
  currency          String

  reason            String
  status            RefundStatus

  provider          String
  providerRef       String?
  snapshot          Json

  requestedBy       String?       // admin / system
  requestedAt       DateTime      @default(now())

  processedAt       DateTime?

  order             Order         @relation(fields: [orderUuid], references: [uuid])
  payment           Payment       @relation(fields: [paymentUuid], references: [uuid])

  @@index([orderUuid])
}

model Wallet {
  uuid              String          @id @default(uuid())
  userUuid          String          @unique
  balance           Int             @default(0)

  user              User            @relation(fields: [userUuid], references: [uuid])
  txns              WalletTransaction[]

  createdAt         DateTime        @default(now()) 
  updatedAt         DateTime        @updatedAt
}

model WalletTransaction {
  uuid              String          @id @default(uuid())
  walletUuid        String
  amount            Int
  type              WalletTransactionType
  reference         String?

  wallet            Wallet          @relation(fields: [walletUuid], references: [uuid])
  createdAt         DateTime        @default(now())
}

model Webhook {
  uuid              String          @id @default(uuid())
  storeUuid         String
  url               String
  eventType         String 
  secret            String
  active            Boolean         @default(true)
}

model AnalyticsSnapshot {
  uuid              String          @id @default(uuid())
  type              String   
  period            String   
  data              Json
  createdAt         DateTime        @default(now())

  @@index([type, period])
  @@unique([type, period])
}

model AddOn {
  uuid              String          @id @default(uuid())
  name              String
  priceMonthly      Int
  metric            String 

  TenantAddOn TenantAddOn[]
}

model EnterpriseContract {
  uuid              String           @id @default(uuid())
  tenantUuid        String
  priceMonthly      Int
  customLimits      Json
  signedAt          DateTime
  expiresAt         DateTime?

  tenant            Tenant            @relation(fields: [tenantUuid], references: [uuid])
}

model PlatformSetting {
  key               String            @id
  value             Json
  description       String?
  updatedBy         String?
  updatedAt         DateTime          @updatedAt
}

model EmailTemplate {
  uuid              String             @id @default(uuid())
  key               String             @unique 
  subject           String
  bodyHtml          String
  bodyText          String?
  isActive          Boolean            @default(true)

  updatedAt         DateTime           @updatedAt
}

model EmailOutbox {
  uuid        String   @id @default(uuid())
  storeUuid   String?
  to          String
  subject     String
  template    String
  payload     Json
  status      EmailStatus @default(PENDING)
  attempts    Int      @default(0)
  lastError   String?
  createdAt  DateTime @default(now())
  sentAt     DateTime?
}

model FeatureFlag {
  key               String             @id
  enabled           Boolean            @default(false)
  description       String?
  rollout           Int?    
  updatedAt         DateTime           @updatedAt
}

model BrandingSetting {
  uuid              String             @id @default(uuid())
  logoUrl           String?
  primaryColor      String?
  secondaryColor    String?
  appName           String
  supportEmail      String?

  updatedAt         DateTime           @updatedAt
}

model DeadLetterJob {
  uuid          String     @id @default(uuid())
  jobType       String
  payload       Json
  error         String
  createdAt     DateTime   @default(now())
  resolved      Boolean    @default(false)
}

model WebhookOutbox {
  uuid        String   @id @default(uuid())
  storeUuid   String
  eventType   String
  payload     Json
  attempts    Int      @default(0)
  lastError   String?
  status      WebhookStatus @default(PENDING)
  nextRetryAt DateTime?
  createdAt  DateTime @default(now())
}

model JobHeartbeat {
  jobName     String   @id
  lastRunAt   DateTime
  status      String
  updatedAt  DateTime @updatedAt
}