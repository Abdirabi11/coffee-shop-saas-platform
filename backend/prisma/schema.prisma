generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  MANAGER
  STAFF
  CUSTOMER
}

enum StoreRole {
  ADMIN
  MANAGER 
  STAFF
}
 
enum TenantStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

enum SubscriptionStatus {
  TRIAL
  ACTIVE
  PAST_DUE
  CANCELED
  EXPIRED
  PAUSED
}

enum OrderStatus {
  PENDING
  PAID 
  PREPARING
  READY 
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  SUCCESS 
  FAILED  
  PENDING
}

enum WalletTransactionType {
  TOP_UP 
  PAYMENT 
  REFUND
}

enum FraudSeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum SubscriptionEvent {
  CREATED
  MIGRATED
  CANCELED
  REACTIVATED
}

enum BillingInterval {
  MONTHLY
  YEARLY
}

enum InvoiceStatus {
  DRAFT
  OPEN
  PAID
  VOID
  FAILED
}

model User {
  uuid             String      @id @default(uuid())
  phoneNumber      String      @unique
  email            String?     @unique
  name             String?
  password         String?

  role             Role        @default(CUSTOMER)

  tenantUuid       String?
  tenant           Tenant?     @relation("TenantUsers", fields: [tenantUuid], references: [uuid])

  ownedTenant      Tenant?     @relation("TenantOwner")

  isVerified       Boolean     @default(false)
  isBanned         Boolean     @default(false)

  bannedAt         DateTime?
  banReason        String?

  otpCode          String?
  otpExpiresAt     DateTime?
  otpAttempts      Int          @default(0)

  wallet           Wallet?
  orders           Order[]
  RefreshToken     RefreshToken[]

  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  Session          Session[]
  AuditLog         AuditLog[]
  Admin2FA         Admin2FA[]
  FraudEvent       FraudEvent[]
  UserStore        UserStore[]

  @@index([phoneNumber])
}   

model Tenant {
  uuid             String        @id @default(uuid())
  name             String
  slug             String        @unique
  email            String
  phone            String?

  status           TenantStatus  @default(ACTIVE)

  ownerUuid        String        @unique
  owner            User          @relation("TenantOwner", fields: [ownerUuid], references: [uuid])

  users            User[]        @relation("TenantUsers")
  stores           Store[]
  subscription     Subscription?

  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  @@index([createdAt])
  @@index([status])
  Invoice Invoice[]
  TenantAddOn TenantAddOn[]
  BillingSnapshot BillingSnapshot[]
  EnterpriseContract EnterpriseContract[]
}

model TenantAddOn {
  uuid             String        @id @default(uuid())
  tenantUuid       String
  addOnUuid        String
  quantity         Int

  tenant           Tenant        @relation(fields: [tenantUuid], references: [uuid])
  addOn            AddOn         @relation(fields: [addOnUuid], references: [uuid])
}

model Store {
  uuid             String          @id @default(uuid())
  tenantUuid       String
  name             String  
  city             String
  active           Boolean         @default(true)

  staff            UserStore[]
  orders           Order[]
  products         Product[]
  auditLogs        AuditLog[]
  tenant           Tenant @relation(fields: [tenantUuid], references: [uuid])
  FraudEvent       FraudEvent[]
  Session          Session[]

  createdAt        DateTime         @default(now())
  @@index([createdAt])
}

model UserStore {
  userUuid         String
  storeUuid        String

  role             StoreRole         
  user             User             @relation(fields: [userUuid], references: [uuid])
  store            Store            @relation(fields: [storeUuid], references: [uuid])

  @@id([userUuid, storeUuid])
}

model LoginAttempt {
  uuid              String       @id @default(uuid())
  phoneNumber       String
  otpCode           String
  expiresAt         DateTime
  attempts          Int           @default(0)
  used              Boolean       @default(false)

  createdAt         DateTime      @default(now())
}

model FraudEvent {
  uuid              String        @id @default(uuid())
  userUuid          String?
  storeUuid         String

  ipAddress         String
  reason            String
  severity          FraudSeverity
 
  user              User?         @relation(fields: [userUuid], references: [uuid])
  store             Store         @relation(fields: [storeUuid], references: [uuid])

  createdAt         DateTime      @default(now())
}

model RefreshToken {
  uuid              String        @id @default(uuid())
  token             String        @unique
  userUuid          String
  revoked           Boolean       @default(false)
  createdAt         DateTime      @default(now())

  user              User          @relation(fields: [userUuid], references: [uuid])

  Session           Session[]
}

model Session {
  uuid              String        @id @default(uuid())
  userUuid          String
  refreshTokenUuid  String        @unique
  storeUuid         String

  deviceId          String
  deviceType        String        @default("UNKNOWN")
  deviceFingerprint String
  ipAddress         String
  userAgent         String

  user              User          @relation(fields: [userUuid], references: [uuid])
  store             Store         @relation(fields: [storeUuid], references: [uuid])
  refreshToken      RefreshToken  @relation(fields: [refreshTokenUuid], references: [uuid])

  lastUsedAt        DateTime      @default(now())
  revoked           Boolean       @default(false)
  createdAt         DateTime      @default(now())
}

model Admin2FA {
  uuid              String        @id @default(uuid())
  userUuid          String        @unique
  secret            String
  enabled           Boolean       @default(false)

  user              User          @relation(fields: [userUuid], references: [uuid])
}

model AuditLog {
  uuid              String        @id @default(uuid())
  storeUuid         String
  actorUuid         String
  
  action            String
  targetType        String
  targetUuid        String?
  ipAddress         String
  userAgent         String
  createdAt         DateTime      @default(now())

  store             Store         @relation(fields: [storeUuid], references: [uuid])
  actor             User          @relation(fields: [actorUuid], references: [uuid])

  @@index([actorUuid])
  @@index([action])
}

model Subscription {
  uuid               String         @id @default(uuid())
  tenantUuid         String         @unique
  tenant             Tenant         @relation(fields: [tenantUuid], references: [uuid])
  planVersionUuid    String

  status             SubscriptionStatus
  price              Int             // cents
  currency           String          @default("USD")

  planUuid           String
  plan               Plan            @relation(fields: [planUuid], references: [uuid])
  planVersion        PlanVersion     @relation(fields: [planVersionUuid], references: [uuid])

  stripeCustomerId   String?
  stripeSubId        String?

  startDate          DateTime
  endDate            DateTime?

  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelAtPeriodEnd  Boolean          @default(false)

  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  histories          SubscriptionHistory[]

  @@index([status])
  @@index([startDate])
  @@index([endDate])
  Invoice Invoice[]
  BillingSnapshot BillingSnapshot[]
}

model SubscriptionHistory {
  uuid                String           @id @default(uuid())
  subscriptionUuid    String
  event               SubscriptionEvent
  oldPlanVersionUuid  String?
  newPlanVersionUuid  String?
  occurredAt          DateTime         @default(now())

  subscription        Subscription     @relation(fields: [subscriptionUuid], references: [uuid])
}

model BillingSnapshot {
  uuid                String           @id @default(uuid())
  tenantUuid          String
  subscriptionUuid    String
  planVersionUuid     String

  month               String // "2025-01"
  baseAmount          Int
  addonsAmount        Int
  totalAmount         Int

  tenant              Tenant           @relation(fields: [tenantUuid], references: [uuid])
  subscription        Subscription     @relation(fields: [subscriptionUuid], references: [uuid])
  planVersion         PlanVersion      @relation(fields: [planVersionUuid], references: [uuid])

  createdAt           DateTime         @default(now())

  @@unique([tenantUuid, month])
}

model Plan {
  uuid               String            @id @default(uuid())
  name               String
  currency           String
  isActive           Boolean           @default(true)

  maxStaff           Int
  maxBranches        Int
  maxOrdersMonth     Int?

  Subscription       Subscription[]
  interval           BillingInterval

  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  PlanPricingVariant PlanPricingVariant[]

  PlanVersion PlanVersion[]
}

model PlanPricingVariant {
  uuid              String           @id @default(uuid())
  planUuid          String
  priceMonthly      Int
  label             String // "A", "B", "BlackFriday"
  isActive          Boolean          @default(true)

  plan              Plan             @relation(fields: [planUuid], references: [uuid])
}

model PlanVersion {
  uuid              String           @id @default(uuid())
  planUuid          String
  version           Int
  priceMonthly      Int
  features          Json
  createdAt         DateTime         @default(now())
  isActive          Boolean          @default(true)

  plan              Plan             @relation(fields: [planUuid], references: [uuid])

  @@unique([planUuid, version])
  Subscription Subscription[]
  BillingSnapshot BillingSnapshot[]
}

model Invoice {
  uuid              String         @id @default(uuid())

  tenantUuid        String
  subscriptionUuid  String

  amount            Int            
  currency          String         @default("USD")

  status            InvoiceStatus
  billingPeriod     String         
  dueAt             DateTime?
  paidAt            DateTime?

  provider          String?       
  providerRef       String?        

  tenant            Tenant         @relation(fields: [tenantUuid], references: [uuid])
  subscription      Subscription   @relation(fields: [subscriptionUuid], references: [uuid])

  createdAt         DateTime       @default(now())

  @@index([tenantUuid])
  @@index([subscriptionUuid])
  @@index([status])
  @@index([paidAt])
  @@unique([tenantUuid, billingPeriod])
}

model Product {
  uuid              String          @id @default(uuid())
  storeUuid         String 
  name              String
  description       String?
  basePrice         Int
  imageUrl          String
  isActive          Boolean         @default(true)
 
  options           ProductOption[]
  orderItems        OrderItem[]
  store             Store           @relation(fields: [storeUuid], references: [uuid])

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

model ProductOption {
  uuid              String          @id @default(uuid())
  productUuid       String
  name              String   // Size, Milk, Sugar
  extraCost         Int      // cents

  product           Product         @relation(fields: [productUuid], references: [uuid])
}

model Order {
  uuid              String          @id @default(uuid())
  userUuid          String
  status            OrderStatus     @default(PENDING)
  totalAmount       Int          // cents

  user              User            @relation(fields: [userUuid], references: [uuid])
  items             OrderItem[]
  payment           Payment?

  storeUuid         String
  store             Store           @relation(fields: [storeUuid], references: [uuid])

  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@index([userUuid])
  @@index([createdAt])  
}

model OrderItem {
  uuid              String          @id @default(uuid())
  orderUuid         String
  productUuid       String
  quantity          Int
  price             Int     

  order             Order           @relation(fields: [orderUuid], references: [uuid])
  product           Product         @relation(fields: [productUuid], references: [uuid])
}

model Payment {
  uuid              String          @id @default(uuid())
  orderUuid         String          @unique
  amount            Int
  status            PaymentStatus
  provider          String         // STRIPE / WALLET
  providerRef       String?

  order             Order           @relation(fields: [orderUuid], references: [uuid])
  createdAt         DateTime        @default(now())
}

model Wallet {
  uuid              String          @id @default(uuid())
  userUuid          String          @unique
  balance           Int             @default(0)

  user              User            @relation(fields: [userUuid], references: [uuid])
  txns              WalletTransaction[]

  createdAt         DateTime        @default(now()) 
  updatedAt         DateTime        @updatedAt
}

model WalletTransaction {
  uuid              String          @id @default(uuid())
  walletUuid        String
  amount            Int
  type              WalletTransactionType
  reference         String?

  wallet            Wallet          @relation(fields: [walletUuid], references: [uuid])
  createdAt         DateTime        @default(now())
}

model Webhook {
  uuid              String          @id @default(uuid())
  storeUuid         String
  url               String
  eventType         String // SECURITY_ALERT, FRAUD, PAYMENT_FAILED
  secret            String
  active            Boolean         @default(true)
}

model AnalyticsSnapshot {
  uuid              String          @id @default(uuid())
  type              String   // "REVENUE", "COHORT", "CHURN"
  period            String   // "2025-01", "2025-Q1"
  data              Json
  createdAt         DateTime        @default(now())

  @@index([type, period])
}

model AddOn {
  uuid              String          @id @default(uuid())
  name              String
  priceMonthly      Int
  metric            String // "orders", "stores"

  TenantAddOn TenantAddOn[]
}

model EnterpriseContract {
  uuid              String           @id @default(uuid())
  tenantUuid        String
  priceMonthly      Int
  customLimits      Json
  signedAt          DateTime
  expiresAt         DateTime?

  tenant            Tenant            @relation(fields: [tenantUuid], references: [uuid])
}

model PlatformSetting {
  key               String            @id
  value             Json
  description       String?
  updatedBy         String?
  updatedAt         DateTime          @updatedAt
}

model EmailTemplate {
  uuid              String             @id @default(uuid())
  key               String             @unique 
  subject           String
  bodyHtml          String
  bodyText          String?
  isActive          Boolean            @default(true)

  updatedAt         DateTime           @updatedAt
}

model FeatureFlag {
  key               String             @id
  enabled           Boolean            @default(false)
  description       String?
  rollout           Int?    
  updatedAt         DateTime           @updatedAt
}

model BrandingSetting {
  uuid              String             @id @default(uuid())
  logoUrl           String?
  primaryColor      String?
  secondaryColor    String?
  appName           String
  supportEmail      String?

  updatedAt         DateTime           @updatedAt
}